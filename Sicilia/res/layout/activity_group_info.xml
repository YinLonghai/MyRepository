<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relout_groupinfo_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:background="@color/coral" >

        <LinearLayout
            android:id="@+id/LinearLayout_chat_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/ImageView_back"
                style="@style/back_title"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_ab_back_holo_dark_am" />

            <TextView
                android:id="@+id/txt_return_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="果心"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/textsize_eighteen"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relout_group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relout_groupinfo_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40.0dp" >

        <ImageView
            android:id="@+id/group_head"
            android:layout_width="80.0dp"
            android:layout_height="80.0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/head_team" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_eighteen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relout_group_member"
        android:layout_width="250.0dp"
        android:layout_height="150.0dp"
        android:layout_below="@id/relout_group_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50.0dp" >

        <TextView
            android:id="@+id/line"
            android:layout_width="1.0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18.0dp"
            android:layout_marginTop="12.0dp"
            android:background="@color/lightsalmon" />

        <ImageButton
            android:id="@+id/img_group"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="-10.0dp"
            android:layout_toLeftOf="@+id/line"
            android:background="@drawable/member_2_orang" />

        <ImageButton
            android:id="@+id/img_member"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-10.0dp"
            android:layout_toRightOf="@+id/line"
            android:background="@drawable/member_1_orang" />
    </RelativeLayout>

</RelativeLayout>