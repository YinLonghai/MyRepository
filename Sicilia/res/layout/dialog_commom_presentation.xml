<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_common_presentation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:hint="@string/inputGroupName"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@drawable/shape_line" />

    <Button
        android:id="@+id/button_dialog_common_presentation_sure"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        style="@style/common_dialog_button"
        android:textStyle="bold"
        android:text="@string/ok" />

</LinearLayout>