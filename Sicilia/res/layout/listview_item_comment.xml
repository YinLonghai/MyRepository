<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_right_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageView_avatar_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/head_orang" />

        <TextView
            android:id="@+id/textView_comment_right"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/imageView_avatar_right"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/textsize_seventeen"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RelativeLayout_left_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/RelativeLayout_right_comment">

        <ImageView
            android:id="@+id/imageView_avatar_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/head_orang" />

        <TextView
            android:id="@+id/textView_comment_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imageView_avatar_left"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/textsize_seventeen" />
    </RelativeLayout>

</RelativeLayout>