<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_msg_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bubble_incoming"
        android:paddingLeft="30dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/textView_msg_left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:minWidth="20dp"
            android:maxWidth="230dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
		<ImageView
            android:id="@+id/textView_msg_left_content_mig"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/imageView_msg_left_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:background="@drawable/playingvoice"/>
    </RelativeLayout>
    
    

    <ImageView
        android:id="@+id/imageView_msg_left_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/head_m" 
        android:layout_alignBottom="@id/relativeLayout_msg_left"/>

    <TextView
        android:id="@+id/textView_msg_left_audiotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/relativeLayout_msg_left"
        android:layout_toRightOf="@id/relativeLayout_msg_left"
        android:layout_marginTop="5dp"
        android:text="1'"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>