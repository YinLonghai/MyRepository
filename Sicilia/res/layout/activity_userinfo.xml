<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activity_userInfo_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout_activity_userInfo_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/coral" >

        <LinearLayout
            android:id="@+id/LinearLayout_chat_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                style="@style/back_title"
                android:id="@+id/img_activity_userInfo_back"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_ab_back_holo_dark_am" />

            <TextView
                android:id="@+id/textView_activity_userInfo_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/setting"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_eighteen" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/my_userifo"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_userInfo_top_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textSize="@dimen/userinfo_top_textsize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_userinfo_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/head_m" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/edt_userInfo_userName"
                    style="@style/editText_userInfo_right"
                    android:hint="@string/username" />

                <TextView
                    android:id="@+id/tv_userInfo_userName"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@+id/edt_userInfo_userName"
                    android:layout_toLeftOf="@+id/edt_userInfo_userName"
                    android:text="@string/username" />

                <Button
                    android:id="@+id/button_userInfo_family"
                    style="@style/editText_userInfo_right"
                    android:layout_below="@id/edt_userInfo_userName"
                    android:hint="@string/family" />

                <TextView
                    android:id="@+id/tv_userInfo_family"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@id/button_userInfo_family"
                    android:layout_toLeftOf="@id/button_userInfo_family"
                    android:text="@string/family" />

                <EditText
                    android:id="@+id/editText_userInfo_familyposition"
                    style="@style/editText_userInfo_right"
                    android:layout_below="@id/button_userInfo_family"
                    android:hint="@string/familyposition" />

                <TextView
                    android:id="@+id/tv_userInfo_familyposition"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@id/editText_userInfo_familyposition"
                    android:layout_toLeftOf="@id/editText_userInfo_familyposition"
                    android:text="@string/familyposition" />

                <TextView
                    android:id="@+id/textView_userInfo_tel"
                    style="@style/editText_userInfo_right"
                    android:layout_below="@id/editText_userInfo_familyposition"
                    android:hint="@string/tel" />

                <TextView
                    android:id="@+id/tv_userInfo_tel"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@id/textView_userInfo_tel"
                    android:layout_toLeftOf="@id/textView_userInfo_tel"
                    android:text="@string/tel" />

                <TextView
                    android:id="@+id/textView_userInfo_email"
                    style="@style/editText_userInfo_right"
                    android:ellipsize="end"
                    android:layout_below="@id/textView_userInfo_tel"
                    android:hint="@string/email" />

                <TextView
                    android:id="@+id/tv_userInfo_email"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@id/textView_userInfo_email"
                    android:layout_toLeftOf="@id/textView_userInfo_email"
                    android:text="@string/email" />

                <Button
                    android:id="@+id/button_userInfo_birthday"
                    style="@style/editText_userInfo_right"
                    android:layout_below="@id/textView_userInfo_email"
                    android:hint="@string/birthday" />

                <TextView
                    android:id="@+id/tv_userInfo_birthday"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@id/button_userInfo_birthday"
                    android:layout_toLeftOf="@id/button_userInfo_birthday"
                    android:text="@string/birthday" />

                <EditText
                    android:id="@+id/edt_userInfo_sex"
                    style="@style/editText_userInfo_right"
                    android:layout_below="@id/button_userInfo_birthday"
                    android:hint="@string/sex" />

                <TextView
                    android:id="@+id/tv_userInfo_sex"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@+id/edt_userInfo_sex"
                    android:layout_toLeftOf="@id/edt_userInfo_sex"
                    android:text="@string/sex" />

                <EditText
                    android:id="@+id/edt_userInfo_preference"
                    style="@style/editText_userInfo_right"
                    android:layout_below="@id/edt_userInfo_sex"
                    android:hint="@string/preference" />

                <TextView
                    android:id="@+id/tv_userInfo_preference"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@+id/edt_userInfo_preference"
                    android:layout_toLeftOf="@+id/edt_userInfo_preference"
                    android:text="@string/preference" />

                <EditText
                    android:id="@+id/edt_userInfo_signature"
                    style="@style/editText_userInfo_right"
                    android:layout_below="@id/edt_userInfo_preference"
                    android:hint="@string/signature" />

                <TextView
                    android:id="@+id/tv_userInfo_signature"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@+id/edt_userInfo_signature"
                    android:layout_toLeftOf="@+id/edt_userInfo_signature"
                    android:text="@string/signature" />

                <EditText
                    android:id="@+id/edt_userInfo_password"
                    style="@style/editText_userInfo_right"
                    android:layout_below="@id/edt_userInfo_signature"
                    android:inputType="textPassword"
                    android:hint="@string/password" />

                <TextView
                    android:id="@+id/tv_userInfo_password"
                    style="@style/textView_userInfo"
                    android:layout_alignBaseline="@+id/edt_userInfo_password"
                    android:layout_toLeftOf="@+id/edt_userInfo_password"
                    android:text="@string/password" />

                <LinearLayout
                    android:id="@+id/ll_activity_userInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_userInfo_password"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/edittext_marginleftright"
                    android:layout_marginRight="@dimen/edittext_marginleftright"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/button_padding"
                    android:visibility="gone"
                    android:weightSum="2.0" >

                    <Button
                        android:id="@+id/button_activity_userInfo_cancel"
                        style="@style/common_button"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/height"
                        android:layout_marginRight="-2dp"
                        android:background="@drawable/cancel_background_seletor_green" />

                    <Button
                        android:id="@+id/button_activity_userInfo_submit"
                        style="@style/common_button"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/height"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/submit_background_seletor_green" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_activity_userInfo_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignRight="@id/tv_userInfo_password"
                    android:layout_below="@id/edt_userInfo_password"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/zone"
                    android:textColor="@color/lightsalmon"
                    android:textSize="17sp" />

                <ProgressBar
                    android:id="@+id/progressbar_userInfo_zone"
                    android:layout_width="135dp"
                    android:layout_height="18dp"
                    android:layout_alignLeft="@+id/edt_userInfo_password"
                    android:layout_alignTop="@+id/tv_activity_userInfo_zone"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/progressbar_green" />
                
                <TextView
                    android:id="@+id/tv_activity_userInfo_zone_size"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tv_activity_userInfo_zone"
                    android:singleLine="true"
                    android:text="10M"
                    android:layout_toRightOf="@id/progressbar_userInfo_zone"
                    android:textColor="@color/lightsalmon"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>