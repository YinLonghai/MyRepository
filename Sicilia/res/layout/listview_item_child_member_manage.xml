<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:id="@+id/imageView_delete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/delete_member" 
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:padding="10dp"/>

    <com.guotion.common.PictureBrowser.SimpleNetImageView
        android:id="@+id/imageView_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageView_delete"
        android:src="@drawable/head_orang"
        android:layout_centerVertical="true" />
    

    <ImageView
        android:id="@+id/imageView_select"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:layout_centerVertical="true" 
        android:src="@drawable/move" />
    
    <TextView
        android:id="@+id/textView_delete"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:text="删除"
        android:background="@color/tomato" 
        android:textSize="@dimen/textsize_fifteen"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true" 
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageView_avatar"
        android:layout_toLeftOf="@id/imageView_select"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_toRightOf="@id/imageView_avatar"
        android:layout_below="@id/textView_name"
        android:background="@color/darkgray" 
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>