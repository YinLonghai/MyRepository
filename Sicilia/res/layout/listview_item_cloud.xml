<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_listview_cloud_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/head_m" />

    <TextView
        android:id="@+id/textView_listview_cloud_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_alignTop="@id/imageView_listview_cloud_head"        
        android:layout_toRightOf="@id/imageView_listview_cloud_head"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textSize="@dimen/textsize_seventeen"  />

    <TextView
        android:id="@+id/textView_listview_cloud_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_listview_cloud_head"
        android:layout_below="@id/textView_listview_cloud_name"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textColor="@color/darkgray"
        android:textSize="@dimen/textsize_fifteen" />

</RelativeLayout>
